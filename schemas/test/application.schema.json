{
  "application": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "name": "application",
    "type": "object",
    "properties": {
      "architecture": {
        "type": "string"
      },
      "buildId": {
        "type": "string",
        "pattern": "^\\d{14}$"
      },
      "channel": {
        "type": "string",
        "enum": ["nightly", "aurora", "beta", "main"]
      },
      "name": {
        "type": "string"
      },
      "platformVersion": {
        "type": "string",
        "pattern": "^\\d{2}\\."
      },
      "version": {
        "type": "string",
        "pattern": "^\\d{2}\\."
      },
      "vendor": {
        "type": "string"
      },
      "xpcomAbi": {
        "type": "string"
      }
    },
    "required": ["architecture", "buildId", "channel", "name", "platformVersion", "version",  "vendor", "xpcomAbi"],
    "additionalProperties": false
  }
}
